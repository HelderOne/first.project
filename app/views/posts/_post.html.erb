<article class="post">
  <section class= "post-head">
   <h5><%= post.title %></h5>
  </section>

  <time>
   <%= post.created_at.to_date.strftime("%d %B, %Y") %>
  </time>
  
    <br>
    <section class= "post-summary clearfix">
     <p><%= simple_format(post.summary) %></p>
    </section>
   <%= link_to "Читать полностью" , post_path(post), :class => 'btn btn-outline-primary' %>
   <%= raw post.tags.map(&:name).map{ |t| link_to t, tag_path(t), class: 'badge badge-primary'}.join(' ') %>
    <hr>
  <br>
</article>
