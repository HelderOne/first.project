<%= form_for @post do |f| %>
 <div class="form-group">
   <%= f.label :title %>
   <%= f.text_field(:title, {:class => 'form-contol'}) %>
 </div>

 <div class="form-group">
   <%= f.label :body %>
   <%= f.text_field(:body, {:class => 'form-contol'}) %>
 </div>

 <div class="form-group">
   <%= f.label :all_tags %>
   <%= f.text_field :all_tags, :class => 'form-contol' %>
 </div>

 <div class="form-group">
   <%= f.submit ({:class => 'btn btn-primary'})%>
 </div>
<% end %>
